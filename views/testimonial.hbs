<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Web</title>
    <link rel="icon" href="assets/img/logoweb.jpg" />
    <link rel="stylesheet" href="assets/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
  {{> navbar}}
    <body>
      <main>
        <h2 class="text-center my-5">My Testimonial</h2>
        <h3 class="text-center mb-3">Rating by star</h3>
        <div class=".container-md d-flex flex-row justify-content-center gap-3">
          <button
            type="button"
            onclick="showAllTestimonials()"
            class="btn btn-primary"
          >All</button>
          <button
            type="button"
            onclick="filterTestimonialByStar(1)"
            class="btn btn-primary"
          >1 ✯</button>
          <button
            type="button"
            onclick="filterTestimonialByStar(2)"
            class="btn btn-primary"
          >2 ✯</button>
          <button
            type="button"
            onclick="filterTestimonialByStar(3)"
            class="btn btn-primary"
          >3 ✯</button>
          <button
            type="button"
            onclick="filterTestimonialByStar(4)"
            class="btn btn-primary"
          >4 ✯</button>
          <button
            type="button"
            onclick="filterTestimonialByStar(5)"
            class="btn btn-primary"
          >5 ✯</button>
        </div>

        <div
          id="testimonialsContainer"
          class="container-fluid mx-auto px-5 mt-4 row row-cols-md-3"
        >
          <p>No testimonials.</p>
        </div>
      </main>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
      ></script>
      <script src="assets/js/testimonials.js"></script>
    </body>
  </body>
</html>